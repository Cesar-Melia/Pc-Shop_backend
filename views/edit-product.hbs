<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link rel="stylesheet" href="/styles/main.css" />
        <script src="/js/edit-product.js" defer></script>

        <title>Edit Product</title>
    </head>
    <body>
        <header class="b-header d-flex justify-content-center">
            <nav class="b-header__nav d-flex justify-content-between align-items-center">

                {{#if isAdmin}}
                    <a class="b-header__admin b-header__link--user" href="/admin">Admin Options</a>
                {{/if}}

                <div class="d-flex justify-content-between">
                    <h3><a class="b-header__link" href="/">Inicio</a></h3>
                    <h3><a class="b-header__link" href="/products/shop">Tienda</a></h3>
                </div>
                <div class="b-header__user-auth d-flex justify-content-between align-items-center">
                    <h3><a
                            class="b-header__link b-header__link--cart"
                            href="/cart/user"
                        >Cesta</a></h3>
                    {{#if user}}
                        <form
                            class="b-header__logout d-flex align-items-center justify-content-center"
                            action="/auth/logout"
                            method="post"
                        >
                            <input class="b-header__button" type="submit" value="Logout" />
                        </form>
                    {{else}}
                        <h3><a
                                class="b-header__link b-header__link--user"
                                href="/auth/login"
                            >Login</a></h3>
                        <h3><a
                                class="b-header__link b-header__link--user"
                                href="/auth/register"
                            >Registro</a></h3>
                    {{/if}}
                </div>

            </nav>
        </header>
        <main class="b-main">

            <h1 class="b-text__title">Editar Producto</h1>

            <form
                data-function="form"
                class="b-form d-flex justify-content-between align-items-center flex-column"
            >

                <div class="b-form__field d-flex align-items-center justify-content-between">
                    <label>Id</label>
                    <input
                        data-function="id"
                        class="b-form__input"
                        name="_id"
                        type="text"
                        placeholder="Nombre"
                    />
                </div>
                <div class="b-form__field d-flex align-items-center justify-content-between">
                    <label>Nombre</label>
                    <input
                        data-function="name"
                        class="b-form__input"
                        name="name"
                        type="text"
                        placeholder="Nombre"
                    />
                </div>

                <div class="b-form__field d-flex align-items-center justify-content-between">
                    <label>Precio</label>
                    <input
                        data-function="price"
                        class="b-form__input"
                        name="price"
                        type="text"
                        placeholder="Precio"
                    />
                </div>
                <div class="b-form__field d-flex justify-content-between">
                    <label>Descripción</label>
                    <textarea
                        data-function="description"
                        class="b-form__textarea"
                        name="description"
                        placeholder="Descripción"
                    ></textarea>
                </div>
                <div class="b-form__field d-flex align-items-center justify-content-between">
                    <label>Tipo</label>
                    <input
                        data-function="type"
                        class="b-form__input"
                        name="type"
                        type="text"
                        placeholder="Tipo (pc-tower, laptop)"
                    />
                </div>
                <div class="b-form__field d-flex align-items-center justify-content-between">
                    <label>Procesador</label>
                    <input
                        data-function="processor"
                        class="b-form__input"
                        name="processor"
                        type="text"
                        placeholder="Procesador"
                    />
                </div>

                <div class="b-form__field d-flex align-items-center justify-content-between">
                    <label>Memória</label>
                    <input
                        data-function="memory"
                        class="b-form__input"
                        name="memory"
                        type="text"
                        placeholder="memória"
                    />
                </div>

                <div class="b-form__field d-flex align-items-center justify-content-between">
                    <label>GPU</label>
                    <input
                        data-function="gpu"
                        class="b-form__input"
                        name="gpu"
                        type="text"
                        placeholder="GPU"
                    />
                </div>

                <div class="b-form__field d-flex align-items-center justify-content-between">
                    <label>SSD</label>
                    <input
                        data-function="ssd"
                        class="b-form__input"
                        name="ssd"
                        type="text"
                        placeholder="SSD"
                    />
                </div>

                <div class="b-form__field d-flex align-items-center justify-content-between">
                    <label>HDD</label>
                    <input
                        data-function="hdd"
                        class="b-form__input"
                        name="hdd"
                        type="text"
                        placeholder="HDD"
                    />
                </div>

                <div class="b-form__field d-flex align-items-center justify-content-between">
                    <label>Valoración</label>
                    <input
                        data-function="stars"
                        class="b-form__input"
                        name="stars"
                        type="text"
                        placeholder="Valoración"
                    />
                </div>

                <div class="b-form__field d-flex align-items-center justify-content-between">
                    <label>Imagen</label>
                    <input
                        data-function="image"
                        class="b-form__input"
                        name="image"
                        type="file"
                        accept="image/*"
                    />
                </div>

                <div class="b-form__field d-flex align-items-center justify-content-between">
                    <label>Stock</label>
                    <input
                        data-function="stock"
                        class="b-form__input"
                        name="stock"
                        type="text"
                        placeholder="Stock"
                    />
                </div>

                <div>
                    <button type="submit">Editar Producto</button>
                </div>
            </form>
        </main>
    </body>
</html>