<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link rel="stylesheet" href="/styles/main.css" />

        <title>User</title>
    </head>
    <body>
        <header class="b-header d-flex justify-content-center">
            <nav class="b-header__nav d-flex justify-content-between align-items-center">
                <div class="d-flex justify-content-between">
                    <h3><a class="b-header__link" href="/">Inicio</a></h3>
                    <h3><a class="b-header__link" href="/products">Productos</a></h3>
                    <h3><a class="b-header__link" href="/orders">Pedidos</a></h3>
                    <h3><a class="b-header__link" href="/users">Usuarios</a></h3>
                </div>
                <div class="b-header__user-auth d-flex justify-content-between align-items-center">
                    {{#if user}}
                        <form
                            class="b-header__logout d-flex align-items-center justify-content-center"
                            action="/auth/logout"
                            method="post"
                        >
                            <input class="b-header__button" type="submit" value="Logout" />
                        </form>
                    {{else}}
                        <h3><a
                                class="b-header__link b-header__link--user"
                                href="/auth/login"
                            >Login</a></h3>
                        <h3><a
                                class="b-header__link b-header__link--user"
                                href="/auth/register"
                            >Registro</a></h3>
                    {{/if}}
                </div>

            </nav>
        </header>
        <main class="b-main d-flex align-items-center flex-column">
            <h1 class="b-text__title"> Usuario {{user._id}}</h1>
            <div>
                <h4>Role: {{user.role}}</h4>
                <h4>Email: {{user.email}}</h4>
                <h4>Contraseña: {{user.password}}</h4>
                <h4>Nombre: {{user.name}}</h4>
                <h4>Apellidos: {{user.lastName}}</h4>
                <h4>Dirección: {{user.adress}}</h4>
                <h4>País: {{user.country}}</h4>
                <h4>Ciudad: {{user.city}}</h4>
                <h4>Pedidos: {{user.orders}}</h4>
            </div>

        </main>
    </body>
</html>