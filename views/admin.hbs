<html lang="en">

    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=h1, initial-scale=1.0" />
        <link rel="stylesheet" href="/styles/main.css" />
        <title>Admin Options</title>
    </head>

    <body>
        <header class="b-header d-flex justify-content-center">
            <nav class="b-header__nav d-flex justify-content-between align-items-center">

                {{!-- {{#if isAdmin}} --}}
                <a class="b-header__admin b-header__link--user" href="/admin">Admin Options</a>
                {{!-- {{/if}} --}}

                <div class="d-flex justify-content-between">
                    <h3><a class="b-header__link" href="/">Inicio</a></h3>
                    <h3><a class="b-header__link" href="/products">Productos</a></h3>
                    <h3><a class="b-header__link" href="/orders">Pedidos</a></h3>
                    <h3><a class="b-header__link" href="/users">Usuarios</a></h3>
                </div>
                <div class="b-header__user-auth d-flex justify-content-between align-items-center">
                    {{#if user}}
                        <form
                            class="b-header__logout d-flex align-items-center justify-content-center"
                            action="/auth/logout"
                            method="post"
                        >
                            <input class="b-header__button" type="submit" value="Logout" />
                        </form>
                    {{else}}
                        <h3><a
                                class="b-header__link b-header__link--user"
                                href="/auth/login"
                            >Login</a></h3>
                        <h3><a
                                class="b-header__link b-header__link--user"
                                href="/auth/register"
                            >Registro</a></h3>
                    {{/if}}
                </div>

            </nav>
        </header>
        <main class="b-main d-flex align-items-center flex-column">
            <h1 class="b-text__title">Admin Options</h1>
            <div class="b-admin__pannel d-flex justify-content-between row">
                <div class="d-flex align-items-center flex-column col-4">
                    <h3 class="b-text__title2">Productos</h3>
                    <h4><a class="b-text__title3" href="/products/create">Crear Producto</a></h4>
                    <h4><a class="b-text__title3" href="/products/edit">Editar Producto</a></h4>
                </div>
                <div class="d-flex align-items-center flex-column col-4">
                    <h3 class="b-text__title2">Pedidos</h3>
                    <h4><a class="b-text__title3" href="/orders">Ver Pedidos</a></h4>
                    <h4><a class="b-text__title3" href="/orders/edit">Editar Pedido</a></h4>
                </div>
                <div class="d-flex align-items-center flex-column col-4">
                    <h3 class="b-text__title2">Usuarios</h3>
                    <h4><a class="b-text__title3" href="/users">Ver Usuarios</a></h4>
                    <h4><a class="b-text__title3" href="/users/edit">Editar Usuario</a></h4>
                </div>
            </div>
        </main>

    </body>

</html>