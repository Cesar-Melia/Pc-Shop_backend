<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link rel="stylesheet" href="/styles/main.css" />

        <title>Products</title>
    </head>
    <body>
        <header class="b-header d-flex justify-content-center">
            <nav class="b-header__nav d-flex justify-content-between align-items-center">

                {{#if isAdmin}}
                    <a class="b-header__admin b-header__link--user" href="/admin">Admin Options</a>
                {{/if}}
                <div class="d-flex justify-content-between">
                    <h3><a class="b-header__link" href="/">Inicio</a></h3>
                    <h3><a class="b-header__link" href="/products/shop">Tienda</a></h3>
                </div>
                <div class="b-header__user-auth d-flex justify-content-between align-items-center">
                    <h3><a
                            class="b-header__link b-header__link--cart"
                            href="/cart/user"
                        >Cesta</a></h3>
                    {{#if user}}
                        <form
                            class="b-header__logout d-flex align-items-center justify-content-center"
                            action="/auth/logout"
                            method="post"
                        >
                            <input class="b-header__button" type="submit" value="Logout" />
                        </form>
                    {{else}}
                        <h3><a
                                class="b-header__link b-header__link--user"
                                href="/auth/login"
                            >Login</a></h3>
                        <h3><a
                                class="b-header__link b-header__link--user"
                                href="/auth/register"
                            >Registro</a></h3>
                    {{/if}}
                </div>

            </nav>
        </header>
        <main class="b-main">
            <h1 class="b-text__title"> Todos los productos</h1>
            <ul>
                {{#each products}}
                    <li>
                        <h4 class="d-flex flex-column">
                            <a href="/products/{{_id}}">
                                Name:
                                {{name}}
                            </a>
                        </h4>
                        <p class="b-text__list">Precio: {{price}}</p>
                        <p class="b-text__list">Descripci√≥n: {{description}}</p>
                        <p class="b-text__list">Tipo: {{type}}</p>
                        <p class="b-text__list">Procesador: {{processor}}</p>
                        <p class="b-text__list">Memoria RAM: {{memory}}</p>
                        <p class="b-text__list">GPU: {{gpu}}</p>
                        <p class="b-text__list">SSD: {{ssd}}</p>
                        <p class="b-text__list">HDD: {{hdd}}</p>
                        <p class="b-text__list">Estrellas: {{stars}}</p>
                        <p class="b-text__list">Imagen: {{image}}</p>
                    </li>
                    <hr />
                {{/each}}
            </ul>
        </main>
    </body>
</html>