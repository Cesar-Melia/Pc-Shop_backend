<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link rel="stylesheet" href="/styles/main.css" />

        <title>Product</title>
    </head>
    <body>

        <header class="b-header d-flex justify-content-center">
            <nav class="b-header__nav d-flex justify-content-between align-items-center">

                {{#if isAdmin}}
                    <a class="b-header__admin b-header__link--user" href="/admin">Admin Options</a>
                {{/if}}

                <div class="d-flex justify-content-between">
                    <h3><a class="b-header__link" href="/">Inicio</a></h3>
                    <h3><a class="b-header__link" href="/products/shop">Tienda</a></h3>
                </div>
                <div class="b-header__user-auth d-flex justify-content-between align-items-center">
                    <h3><a
                            class="b-header__link b-header__link--cart"
                            href="/cart/user"
                        >Cesta</a></h3>
                    {{#if user}}
                        <form
                            class="b-header__logout d-flex align-items-center justify-content-center"
                            action="/auth/logout"
                            method="post"
                        >
                            <input class="b-header__button" type="submit" value="Logout" />
                        </form>
                    {{else}}
                        <h3><a
                                class="b-header__link b-header__link--user"
                                href="/auth/login"
                            >Login</a></h3>
                        <h3><a
                                class="b-header__link b-header__link--user"
                                href="/auth/register"
                            >Registro</a></h3>
                    {{/if}}
                </div>

            </nav>
        </header>
        <main class="b-main">
            {{#if product}}
                <h1>Name: {{product.name}}</h1>
                <h4>Price: {{product.price}}</h4>
                <h4>Description: {{product.description}}</h4>
                <h4>Tipo: {{type}}</h4>
                <h4>Procesador: {{processor}}</h4>
                <h4>Memoria RAM: {{memory}}</h4>
                <h4>GPU: {{gpu}}</h4>
                <h4>SSD: {{ssd}}</h4>
                <h4>HDD: {{hdd}}</h4>
                <h4>Stars: {{product.stars}}</h4>
                <h4>Image: {{product.image}}</h4>

            {{else}}
                No existe
            {{/if}}
        </main>
    </body>
</html>